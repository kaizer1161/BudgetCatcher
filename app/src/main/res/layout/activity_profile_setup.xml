<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/deep_sea_dive">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gap_of_16dp"
                android:text="Add Profile Pic ?"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="22dp" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/doctorImage"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:src="@drawable/propic" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/gap_of_52dp"
                android:layout_marginRight="@dimen/gap_of_52dp"
                android:background="@drawable/light_blue_button_background"
                android:text="Choose from Gallery"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/aquarium" />

            <Spinner
                android:id="@+id/financial_goal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/gap_of_16dp"
                android:layout_marginRight="@dimen/gap_of_16dp"
                android:padding="@dimen/gap_of_16dp">

            </Spinner>

            <Spinner
                android:id="@+id/risk_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/gap_of_16dp"
                android:layout_marginRight="@dimen/gap_of_16dp"
                android:paddingLeft="@dimen/gap_of_16dp"
                android:paddingRight="@dimen/gap_of_16dp">

            </Spinner>

            <Spinner
                android:id="@+id/skill_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/gap_of_16dp"
                android:layout_marginRight="@dimen/gap_of_16dp"
                android:padding="@dimen/gap_of_16dp">

            </Spinner>

            <Button
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/gap_of_16dp"
                android:background="@drawable/light_blue_button_background"
                android:text="Save"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/aquarium" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>