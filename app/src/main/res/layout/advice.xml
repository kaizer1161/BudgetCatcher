<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/gap_of_16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/aquarium"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/deep_sea_dive"
                    android:gravity="center"
                    android:padding="@dimen/gap_of_8dp"
                    android:text="Compare Your Financial Leverage"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/gap_of_16dp"
                    android:layout_marginRight="@dimen/gap_of_16dp"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/gap_of_8dp"
                        android:background="@drawable/light_blue_button_background"
                        android:text="Saving Rate Strength"
                        android:textAllCaps="false"
                        android:textColor="@color/aquarium" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/gap_of_8dp"
                        android:layout_marginRight="@dimen/gap_of_8dp"
                        android:background="@drawable/light_blue_button_background"
                        android:text="Checking Account fees"
                        android:textAllCaps="false"
                        android:textColor="@color/aquarium" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/gap_of_8dp"
                        android:background="@drawable/light_blue_button_background"
                        android:text="Credit Card Int. Rates"
                        android:textAllCaps="false"
                        android:textColor="@color/aquarium" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/aquarium"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/deep_sea_dive"
                    android:gravity="center"
                    android:padding="@dimen/gap_of_8dp"
                    android:text="Advisory Board"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/gap_of_8dp"
                    android:layout_marginRight="@dimen/gap_of_8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/gap_of_4dp"
                            android:layout_marginTop="@dimen/gap_of_4dp"
                            android:layout_weight="50"
                            android:background="@drawable/light_blue_button_background"
                            android:text="WSJ"
                            android:textColor="@color/aquarium" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/gap_of_4dp"
                            android:layout_marginTop="@dimen/gap_of_4dp"
                            android:layout_marginRight="@dimen/gap_of_4dp"
                            android:layout_weight="50"
                            android:background="@drawable/light_blue_button_background"
                            android:text="Nerd wallet"
                            android:textAllCaps="false"
                            android:textColor="@color/aquarium" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/gap_of_4dp"
                            android:layout_marginTop="@dimen/gap_of_4dp"

                            android:layout_weight="50"
                            android:background="@drawable/light_blue_button_background"
                            android:text="Market watch"
                            android:textAllCaps="false"
                            android:textColor="@color/aquarium" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/gap_of_4dp"
                            android:layout_marginTop="@dimen/gap_of_4dp"
                            android:layout_marginRight="@dimen/gap_of_4dp"
                            android:layout_weight="50"
                            android:background="@drawable/light_blue_button_background"
                            android:text="John hancock"
                            android:textAllCaps="false"
                            android:textColor="@color/aquarium" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/gap_of_4dp"
                            android:layout_weight="50"
                            android:background="@drawable/light_blue_button_background"
                            android:text="The penny holder"
                            android:textAllCaps="false"
                            android:textColor="@color/aquarium" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/aquarium"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/deep_sea_dive"
                    android:gravity="center"
                    android:padding="@dimen/gap_of_8dp"
                    android:text="Find The Pros"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/gap_of_16dp"
                    android:layout_marginRight="@dimen/gap_of_16dp"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/gap_of_8dp"
                        android:background="@drawable/light_blue_button_background"
                        android:text="Capital Compass Group"
                        android:textAllCaps="false"
                        android:textColor="@color/aquarium" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/gap_of_8dp"
                        android:layout_marginRight="@dimen/gap_of_8dp"
                        android:background="@drawable/light_blue_button_background"
                        android:text="The Law Crop"
                        android:textAllCaps="false"
                        android:textColor="@color/aquarium" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/gap_of_8dp"
                        android:background="@drawable/light_blue_button_background"
                        android:text="CPA Taxes"
                        android:textAllCaps="false"
                        android:textColor="@color/aquarium" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/gap_of_8dp"
                        android:layout_marginRight="@dimen/gap_of_8dp"
                        android:layout_marginBottom="@dimen/gap_of_8dp"
                        android:background="@drawable/light_blue_button_background"
                        android:text="Tax Attorney"
                        android:textAllCaps="false"
                        android:textColor="@color/aquarium" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>