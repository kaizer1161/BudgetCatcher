<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/gap_of_16dp"
        android:layout_weight="30"
        app:cardCornerRadius="@dimen/gap_of_16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/aquarium"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/deep_sea_dive"
                android:gravity="center"
                android:padding="@dimen/gap_of_8dp"
                android:text="INCOME"
                android:textColor="@color/white" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/gap_of_16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/gap_of_16dp"
                        android:layout_marginTop="@dimen/gap_of_16dp"
                        android:layout_marginRight="@dimen/gap_of_16dp"
                        android:theme="@style/sign_up_edit_text">

                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Pay frequency"
                            android:inputType="text"
                            android:textColor="@color/light_blue" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/gap_of_16dp"
                        android:theme="@style/sign_up_edit_text">

                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Next paydate"
                            android:inputType="text"
                            android:textColor="@color/light_blue" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/gap_of_16dp"
                        android:theme="@style/sign_up_edit_text">

                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Normal or Est .Net pay"
                            android:inputType="text"
                            android:textColor="@color/light_blue" />

                    </android.support.design.widget.TextInputLayout>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/light_blue_button_background"
                        android:layout_margin="@dimen/gap_of_16dp"
                        android:text="Save"
                        android:textColor="@color/aquarium" />

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/gap_of_16dp"
        android:layout_marginRight="@dimen/gap_of_16dp"
        android:layout_weight="30"
        app:cardCornerRadius="@dimen/gap_of_16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/deep_sea_dive"
                android:drawableEnd="@drawable/ic_add_circle_outline_24dp"
                android:gravity="center"
                android:padding="@dimen/gap_of_8dp"
                android:text="BILLS"
                android:textColor="@color/white" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/gap_of_16dp"
        android:layout_weight="30"
        app:cardCornerRadius="@dimen/gap_of_16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/deep_sea_dive"
                android:drawableEnd="@drawable/ic_add_circle_outline_24dp"
                android:gravity="center"
                android:padding="@dimen/gap_of_8dp"
                android:text="ALLOWANCE: WEEKLY BUDGET"
                android:textColor="@color/white" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>